<UserControl x:Class="Pape.SpinBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pape"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="55">
    <Grid>
        <TextBox x:Name="ValueBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="35" MaxLines="1" Height="20"/>
        <Button x:Name="Increase" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="10" Click="Increase_Click"/>
        <Button x:Name="Decrease" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="20" Height="10" Click="Decrease_Click"/>
    </Grid>
</UserControl>
